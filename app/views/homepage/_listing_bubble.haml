.bubble-item
  .bubble-image-container
    - if listing.has_image?
      = link_to(image_tag(listing.listing_images.first.image.url(:medium), :alt => listed_listing_title(listing)), listing)
  %a.bubble-overlay{:class => ("bubble-no-image" unless listing.has_image?), :href => listing_path(listing)}
    %span{:class => "bubble-title-link"}
      = listing.title
  .bubble-title
    .bubble-avatar
      = small_avatar_thumb(listing.organization_or_author?(@current_community))
    .bubble-details
      .bubble-author
        = author_link(listing)
      .bubble-price
        = money_without_cents_and_with_symbol(listing.price).upcase
        - unless listing.quantity.blank?
          = "/ #{listing.quantity}"
        - if @current_community.vat
          = t(".price_excludes_vat")