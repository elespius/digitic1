<div class="blog-container">

<% @posts.each do |p| %>
  <div class="blog-post">
    <h3 class="blog-title">
      <%= raw p["post_title"] %>
    </h3>

    <% if !p["post_thumbnail"].kind_of?(Array) && p["post_thumbnail"]["link"] %>
      <img src="<%=p["post_thumbnail"]["link"]%>">
    <% end %>


    <%= raw p["post_excerpt"] %>
  </div>
<% end %>

</div>