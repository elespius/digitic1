- listings = persons_listings(person, limit)
= render :partial => 'listings/profile_listing', :collection => listings, :as => :listing

.row.load-more-listings-container
  - if listings.count > limit
    #load-more-listings
      - if current_user?(@person)  && params[:show_closed]
        = link_to t("people.show.show_all_listings"), "#"
      - else 
        = link_to t("people.show.show_all_open_listings"), "#"