/* 
  Top navibar
*/

header.marketplace-header {
  border-bottom: em(3) solid $light-body;
  
  .mobile-menu-toggle {
    position: absolute;
    top: 0;
    left: 0;
    width: lines(2.5);
    height: (lines(2.5) - em(3));
    padding: em(17) lines(0.5) em(10) lines(0.5);
    border-right: 1px solid $aside;
    &:hover { color: $link; }
    cursor: pointer;
    z-index: 10;
    
    @include media(mid-desktop) {
      display: none;
    }
  }
  
  .mobile-menu {
    position: absolute;
    left: 0;
    top: lines(2.5);
    width: 100%;
  }
  
  a.logo-side {
    z-index: 4;
    color: $body;
    &:hover { 
      color: $body;
      background: $highlight;
    }
    cursor: pointer;
    position: absolute;
    top: 0;
    left: lines(2.5);
    padding-top: em(8);
    height: (lines(2.5) - em(3));
    @include media(mid-desktop) {
      position: static;
      vertical-align: top;
      display: inline-block;
      padding-left: lines(0.5);
      &:hover { background: $background; }
    }
    @include media(desktop) {
      padding-left: 0;
    }
  }
  
  a.logo-side-logged {
    width: lines(2.5);
    text-align: center;
    @include media(mid-desktop) {
      text-align: left;
      width: lines(7);
    }
  }
  
  a.logo-side-unlogged {
    width: lines(5);
    padding-left: lines(0.75);
    @include media(mid-desktop) {
      padding-left: 0;
      width: lines(7);
    }
  }
  
  img.global-header-logo {
    height: em(40);
    display: inline-block;
  }
  
  .marketplace-name {
    text-transform: uppercase;
    vertical-align: top;
    padding-top: em(7);
    margin-left: lines(0.25);
    @include media(mid-desktop) {
      @include big-type;
      font-weight: 600;
      margin-left: lines(0.5, 24);
      padding-top: em(5);
    }
  }
  
  .marketplace-name-logged {
    display: none;
    @include media(mid-desktop) {
      display: inline-block;
    }
  }
  
  .marketplace-name-unlogged {
    display: inline-block;
  }
  
  .right-side {
    position: relative;
    display: inline-block;
    font-weight: 600;
    width: 100%;
    @include media(mid-desktop) {
      width: lines(33);
      position: absolute;
      right: 0;
      top: 0;
      text-align: right;
    }
  }
  
  a.global-navi {
    vertical-align: top;
    display: none;
    margin-right: lines(0.5);
    padding-top: em(15);
    color: $light-body;
    &:hover { color: $link; }
    
    @include media(mid-desktop) {
      display: inline-block;
    }
  }
  
  a.login-link {
    display: inline-block;
    position: absolute;
    top: em(-18);
    right: lines(0.5);
    @include media(mid-desktop) {
      position: static;
    }
  }
  
  a.global-navi-left {
    &:after {
      margin-left: lines(0.5);
      content: "|";
    };
  }
  
  a.inbox-link {
    padding-top: em(17);
  }
  
  .language-menu-toggle {
    position: relative;
    vertical-align: top;
    padding: em(10) 0 em(15) 0;
    margin-right: lines(0.5);
    display: none;
    &:hover { color: $link; }
    &:before {
      color: $light-body !important;
      display: inline-block;
      margin-right: em(8);
      margin-left: 0;
      padding-left: 0;
      padding-top: em(5);
      content: "|";
    };
    &:after {
      color: $light-body !important;
      display: inline-block;
      margin-left: em(8);
      margin-right: 0;
      padding-right: 0;
      padding-top: em(5);
      content: "|";
    };
    
    .language-name {
      display: inline-block;
      vertical-align: top;
      padding: em(5) 0 0 em(4);
    }

    .icon-dropdown {
      display: inline-block;
      vertical-align: top;
      padding: em(8) 0 0 em(3);
    }
    
    @include media(mid-desktop) {
      display: inline-block;
    }
    
  }
  
  .language-menu {
    @include media(tablet) {
      position: absolute;
      left: 0;
      top: lines(2.5);
      width: lines(10);
      z-index: 10;
    }
  }
  
  .user-menu-toggle {
    width: 100%;
    position: relative;
    display: inline-block;
    vertical-align: top;
    padding: em(10) lines(0.5) em(5) lines(0.5);
    margin-left: lines(5);
    border-left: 1px solid $aside;
    &:hover { color: $link; }

    .user-avatar {
      display: inline-block;
      width: lines(1.5);
      height: lines(1.5);
      @include border-radius(em(5));
    }

    .user-name {
      vertical-align: top;
      padding: em(5) 0 0 em(4);
      display: inline-block;
    }

    .icon-dropdown {
      display: block;
      position: absolute;
      top: em(18);
      right: lines(5.5);
    }
    
    .badge {
      display: none;
    }
    
    @include media(mid-desktop) {
      border: 0;
      padding-left: lines(0.25);
      margin-left: 0;
      width: auto;
      
      .icon-dropdown {
        position: static;
        vertical-align: top;
        padding: em(8) 0 0 em(3);
        display: inline-block;
      }
    
    }

  }
  
  .user-menu {
    position: absolute;
    left: 0;
    top: lines(2.5);
    width: 100%;
    @include media(tablet) {
      width: lines(10);

      .inbox-menu-button {
        // Hidden, since this functionality is now in
        // .inbox-link
        display: none;
      }
    }
  }
  
  
  .new-listing-link {
    display: none;
    vertical-align: top;
    padding: em(15) lines(0.5) 0 0;
    a {
      @include action-button($network-green);
      border-width: em(2);
      margin-left: lines(0.25);
      font-weight: 300;
      @include media(tablet) {
        @include normal-type;
        font-weight: 300;
        padding: em(5) em(13) em(8) em(13);
        width: auto;
      }
    }
    
    @include media(mid-desktop) {
      display: inline-block;
    }
    
    @include media(desktop) {
      padding-right: 0;
    }
  }
  
}


/* 
  Lander
*/

.marketplace-lander {
  position: relative;
  border-bottom: em(3) solid $body;

  figure.marketplace-cover {
    background-image: image-url($cover-photo-url);
    height: em($cover-photo-mobile-height);
    @include media(tablet) {
      @include fluid-ratio(em(1920) em($cover-photo-height), em(300) em($cover-photo-height));
    }
  }
  
  figure.marketplace-cover-small {
    background-image: image-url($cover-photo-url);
    height: em($small-cover-photo-mobile-height);
    @include media(tablet) {
      @include fluid-ratio(em(1920) em($small-cover-photo-height), em(300) em($small-cover-photo-height));
    }
  }
  
  .coverimage-fade {
    position: absolute;
    top: lines(0);
    max-width: em(1920);
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    z-index: 1;
    background: rgba($highlight, 0.825);
  }
  
  figure.marketplace-cover-small-fade {
    height: em($small-cover-photo-mobile-height, 16);
    @include media(tablet) {
      @include fluid-ratio(em(1920) em($small-cover-photo-height), em($small-cover-photo-height) em($small-cover-photo-height));
    }
  }
  
  .marketplace-lander-content {
    top: lines($lander-content-top-mobile);
    
    h1 {
      position: relative;
      padding: 0;
      color: $background;
      @include larger-type;
      line-height: em(18);
      @include media(tablet) {
        padding: 0 lines(1);
        @include huge-type;
        line-height: em(15);
      }
    }
 
  }
  
  .marketplace-title-header {
    width: 100%;
    text-align: center;
    position: absolute;
    top: lines(-4);
    z-index: 2;
    padding: 0 lines(0.5);
    
    h1 {
      padding: (lines(1.5) - em(2)) 0;
      color: $light-body;
      @include big-type;
    }
    
    @include media(tablet) {
      text-align: left;
      h1 {
        padding: lines(0.75) 0;
        @include large-type;
      }
    }
  }

  p {
    margin-top: lines(0.5);
    color: $background;
    @include normal-type;
    font-weight: 500;
    @include text-shadow(2px, 2px, 3px, rgba(black, 0.5));
    @include media(tablet) {
      margin-top: lines(1);
    }
  }
  
  input[type=text] {
    @include normal-type;
    padding: 0;
    border: 0;
    margin: 0;
    vertical-align: top;
    padding: em(11) em(11) em(11) em(11); 
    border: 3px solid $body;
    width: 100%;
  }
  
  button.action-button {
    @include action-button($link);
    border: 3px solid darken($link, 25%);
    &:hover { border-color: darken($link, 25%); }
    @include media(tablet) {
      margin: 0 0 0 lines(0.5);
    }
  }
  
  .search-form {
    margin-top: lines(1);
    @include media(tablet) {
      margin-top: lines(2.5);
    }
  }
  
  .search-form-input {
    vertical-align: top;
    display: inline;
  }
  
  .browse-view-search-form {
    width: 100%;
    padding-top: lines(1.5);
    
    input[type=text] {
      @include normal-type;
      vertical-align: top;
      border: em(2) solid $body;
      margin-right: em(-4);
      padding: em(11) em(14) em(11) em(14);
      width: 73%;
      display: inline;
    }
    
    button.action-button {
      display: inline;
      vertical-align: top;
      border-width: em(2);
      padding: em(8);
      margin: 0 0 0 3%;
      width: 24%;
      padding: em(12) em(16) em(10) em(16);
      margin-right: em(-4);
    }
    
    @include media(tablet) {
      padding: lines(1) 0;
    }
    
  }
  
  @include media(tablet) {
    
    .marketplace-lander-content {
      top: lines($lander-content-top);
      
      h1 {
        @include huge-type;
        line-height: em(13);
      }
    }
    
    p {
      @include large-type;
      margin: lines(0.5) auto;
      max-width: lines(15);
    }
    
    input[type=text] {
      @include big-type;
      padding: em(11) em(14) em(11) em(14);
      width: lines(15);
    }
    
    button.action-button {
      width: lines(4);
      padding: em(14) em(16) em(11) em(16);
      @include big-type;
    }
    
    .search-form-text-field {
      width: lines(10);
    }
    
    .browse-view-search-form {
      
      input[type=text] {
        width: 77%;
      }
      
      button.action-button {
        padding: em(9) em(16) em(7) em(16);
        margin-left: 1%;
        width: 22%;
      }

    }
    
  }
  
  @include media(desktop) {
    
    .marketplace-title-header {
      padding: 0;
    }
    
    .marketplace-lander-content {
      h1 {
        @include mega-type;
        line-height: em(15);
      }
    }
  }
  
}

